<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="0.5dip" android:color="@color/custom_strawberry_2" />
            <gradient android:angle="-90" android:startColor="@color/custom_strawbery" android:endColor="#cc1030"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="0.5dip" android:color="@color/custom_red_border" />
            <solid android:color="@color/custom_strawbery"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="0.5dip" android:color="@color/custom_strawberry_2" />
            <gradient android:angle="-90" android:startColor="@color/custom_strawbery" android:endColor="@color/custom_strawbery" />
        </shape>
    </item>
</selector>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_white"
    android:fillViewport="true"
    android:paddingLeft="@dimen/space_14"
    android:paddingRight="@dimen/space_14"
    android:scrollbars="none"
    tools:context=".CodeChallenge2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_60"
            android:layout_marginTop="@dimen/space_14"
            android:layout_marginBottom="@dimen/space_14">

            <TextView
                android:id="@+id/textview_square_one"
                android:layout_width="@dimen/space_60"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="@color/custom_orage" />

            <TextView
                android:id="@+id/textview_square_two"
                android:layout_width="@dimen/space_60"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/textview_square_three"
                android:background="@color/custom_green" />

            <TextView
                android:id="@+id/textview_square_three"
                android:layout_width="@dimen/space_60"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/space_24"
                android:layout_toStartOf="@id/textview_square_four"
                android:background="@color/custom_green2" />

            <TextView
                android:id="@+id/textview_square_four"
                android:layout_width="@dimen/space_60"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/custom_orange2" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space_2"
            android:text="@string/lorem_ipsum_text" />

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_module3_challenge_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/module_3_challenge_1"
            app:layout_constraintEnd_toEndOf="@+id/button_module3_challenge_2"
            app:layout_constraintStart_toStartOf="@+id/button_module3_challenge_2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_module3_challenge_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/module_3_challenge_2"
            app:layout_constraintEnd_toEndOf="@+id/button_module3_challenge_3"
            app:layout_constraintStart_toStartOf="@+id/button_module3_challenge_3"
            app:layout_constraintTop_toBottomOf="@+id/button_module3_challenge_1" />

        <Button
            android:id="@+id/button_module3_challenge_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/module_3_challenge_3"
            app:layout_constraintEnd_toEndOf="@+id/button_module3_challenge_4"
            app:layout_constraintStart_toStartOf="@+id/button_module3_challenge_4"
            app:layout_constraintTop_toBottomOf="@+id/button_module3_challenge_2" />

        <Button
            android:id="@+id/button_module3_challenge_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/module_3_challenge_4"
            app:layout_constraintEnd_toEndOf="@+id/button_module3_bonus_puzzle"
            app:layout_constraintStart_toStartOf="@+id/button_module3_bonus_puzzle"
            app:layout_constraintTop_toBottomOf="@+id/button_module3_challenge_3" />

        <Button
            android:id="@+id/button_module3_bonus_puzzle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/module_3_bonus_puzzle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_module3_challenge_4" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
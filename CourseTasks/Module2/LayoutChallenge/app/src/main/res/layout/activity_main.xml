<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- the box num 1 (top) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_zero"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/space_zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/custom_light_orange"
            android:gravity="center"
            android:padding="@dimen/space_5"
            android:text="@string/this_is_an_orange_textview"
            android:textColor="@color/custom_white"
            android:textSize="@dimen/font_18" />

        <TextView
            android:layout_width="@dimen/space_zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/custom_light_green"
            android:gravity="center"
            android:text="@string/this_is_a_green_textview"
            android:textColor="@color/custom_black"
            android:textSize="@dimen/font_18" />

        <TextView
            android:layout_width="@dimen/space_zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/custom_light_blue"
            android:gravity="center"
            android:padding="@dimen/space_5"
            android:text="@string/this_is_a_blue_textview"
            android:textColor="@color/custom_white"
            android:textSize="@dimen/font_18" />

    </LinearLayout>
    <!-- END box num 1 (top) -->

    <!-- the box num 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_zero"
        android:layout_weight="1"
        android:background="@color/custom_white2"
        android:orientation="horizontal"
        android:padding="@dimen/space_8">

        <Button
            android:layout_width="@dimen/space_zero"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/space_8"
            android:layout_weight="1"
            android:background="@color/custom_light_blue2"
            android:padding="8dp"
            android:text="@string/this_is_a_button"
            android:textAllCaps="true" />

        <ImageView
            android:layout_width="@dimen/space_zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/pictor_pallete_image"
            android:scaleType="fitCenter"
            android:src="@drawable/paleta_pictor" />

        <Button
            android:layout_width="@dimen/space_zero"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/space_8"
            android:layout_weight="1"
            android:background="@color/custom_light_green2"
            android:text="@string/this_is_a_green_button" />

    </LinearLayout>
    <!-- END box num 2 -->

    <!-- the box num 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_zero"
        android:layout_weight="1"
        android:background="@color/custom_dark_yellow"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/this_is_an_edittext"
            android:paddingStart="@dimen/space_10"
            android:paddingEnd="@dimen/space_zero" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/this_is_a_new_edittext"
            android:paddingStart="@dimen/space_10"
            android:paddingEnd="@dimen/space_zero" />

    </LinearLayout>
    <!-- END box num 3 -->

    <!-- the box num 4 (bottom) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_zero"
        android:layout_weight="2"
        android:background="@color/custom_light_blue2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/space_10"
            android:paddingTop="@dimen/space_8"
            android:paddingEnd="@dimen/space_10"
            android:paddingBottom="@dimen/space_5">

            <CheckBox
                android:layout_width="@dimen/space_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notify_me"
                android:textSize="@dimen/font_16" />

            <Switch
                android:layout_width="@dimen/space_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/auto_backup" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/custom_violet" />

        <RatingBar
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_8"
            android:numStars="5"
            android:rating="4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/custom_violet" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/space_10"
            android:paddingTop="@dimen/space_16"
            android:paddingEnd="@dimen/space_zero">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:textSize="@dimen/font_16" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:textSize="@dimen/font_16" />

        </RadioGroup>

    </LinearLayout>
    <!-- END box num 4 (bottom) -->

</LinearLayout>